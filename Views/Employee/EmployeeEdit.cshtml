@model WebApplication5.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2 class="text-center text-primary mb-4">Edit Employee</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EmployeeEdit" method="post" class="shadow p-4 bg-white rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Code" class="form-label">Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DOB" class="form-label">Date of Birth</label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="City" class="form-label">City</label>
                <select asp-for="City" class="form-select">
                    <option>Delhi</option>
                    <option>Mumbai</option>
                    <option>Patna</option>
                    <option>Banglore</option>
                    <option>Ahmedabad</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Gender</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Male" checked="@Model.Gender == "Male"" />
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Female" checked="@Model.Gender == "Female"" />
                    <label class="form-check-label">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Status</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Status" value="Active" checked="@Model.Status == "Active"" />
                    <label class="form-check-label">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Status" value="Inactive" checked="@Model.Status == "Inactive"" />
                    <label class="form-check-label">Inactive</label>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Update Employee" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link">‚Üê Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
